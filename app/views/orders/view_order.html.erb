<div class="row">
	<div class="col-lg-12">
	
	
  		
		<div class="panel panel-primary">
  			<div class="panel-heading">
   				 <h3 class="panel-title"><a href="/locations/<%=@location.id%>" data-no-turbolink = "true"><%=@location.address.to_s+"# "+@location.number.to_s%></a></h3>
  			</div>
  			<div class="panel-body">
  				<div class="well">
  					<h4>Datos personales</h4>
  				<b>Nombre: </b> <%=@location.user.name%><br>
  				<b>Apellido: </b> <%=@location.user.lastname%><br>
  				<b>Telefono: </b> <%=@location.user.phone%><br>
  				</div>
  				<form action="/orders/confirm_order_send/<%=@delivery.id%>" method="post">
  			  <table class="table table-striped table-bordered">
  			  	<tr>
  			  		<th>Producto</th>
					<th>Precio</th>
					<th>Marca</th>
					<th>Cantidad</th>
					<th>Fecha</th>
				  	</tr>
  			  	<%@orders.each do |order|%>
  			  		<tr>
  			  			<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center">
					
				
						<%=order.amount%>
				
					
				
					</td>
				<td><%=order.updated_at.to_date%></td>

				  		</tr>
  			  	<%end%>
  			  </table>
  			  <b>Fecha de entrega:</b><br>
  			   <input type="date" id="entrega" name="entrega" value="<%=@delivery.delivery%>"class='form-control input-append' data-format='dd/MM/yyyy' required=true :style="border-bottom-left-radius: 4px;  border-top-left-radius: 4px;"><br><b>Mensajero:</b> 
  			   	<%=select_tag :messenger,options_from_collection_for_select(User.where(:rol=>'messenger'), "id", "email")%><br><br>
	
  			  <input type="submit" value="Entregar" class = "btn btn-primary">
  			</form>
 		    </div>
		</div>

	</div>
</div>