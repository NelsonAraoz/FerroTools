<div class="row">
	
	<div class="col-lg-12">
		<div class="page-header">
		<h2 align="center" id="forms">Mis pedidos</h2>
		</div>
	
		<table class="table table-striped table-bordered">
		<tr>	
			<th>Producto</th>
			<th>Precio</th>
			<th>Marca</th>
			<th>Cantidad</th>

			<th>Fecha de pedido</th>
			
			<th></th>
			<th>Fecha de entrega</th>
		</tr>
		<% @orders. each do |order| %>
			<tr>
				<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center">
					
				
						<%=order.amount%>
				
					
				
					</td>
				<td><%=order.updated_at.to_date%></td>
				
				<td align="center">
				<%if !order.sended?%>
				<%= link_to 'Cancelar', '/orders/uncheck/'+order.id.to_s, method: :post, data: { confirm: 'Desea eliminar este pedido?' }, :class => 'btn btn-mini btn-danger' %>
				 <%else%>
				 No se puede cancelar
				 <%end%>
				</td>
				<td align="center">
					<%if !order.sended?%>
					-
					 <%else%>
				 <%=order.delivery%>
				 <%end%>
				</td>
			</tr>
		<%end%>
		</table>
		
		
	</div>
</div>