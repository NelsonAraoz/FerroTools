
<div class="row">
	
	<div class="col-lg-12">
		<div class="page-header">
		<h2 align="center" id="forms">En carrito</h2>

		
		<div id="showmenu"><img src="/assets/search.png"></div>	
		<div id="welcomeDiv" class="menu"  style="display:none;"> 
		<form action="/orders/remove_kart/<%=@product.id%>" method="get">
	
		<div class="well">
			<div class="row">
				<div class="col-lg-4">
					Antes del: <input type="date" id="entrega" name="from" class='form-control input-append' data-format='dd/MM/yyyy' style="border-bottom-left-radius: 4px;  border-top-left-radius: 4px;" value="<%=params[:from]%>">
				</div>
							</div>
		<input type="submit" value="Buscar">
		</div>
		</form>
		</div>

		</div>

		<form action="/orders/removing_from_kart/<%=@product.id%>" method="post">
			<input type="hidden" value="<%=params[:from]%>" name="from">
		<table class="table table-striped table-bordered">
		<tr>	
			<th>Producto</th>
			<th>Precio</th>
			<th>Marca</th>
			<th>Cantidad</th>
			<th>Usuario</th>
			<th>Fecha</th>
			<th></th>

		</tr>
		<% @orders. each do |order| %>
			<tr>
				<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center"><%=order.amount%>
				</td>
				<td><%=order.user.name.to_s+' '+order.user.lastname.to_s%></td>
				<td><%=order.updated_at.to_date%></td>
				<td><%=link_to "Delete",order_path(order.id), :method => :delete, :class => "delete", :confirm => "Seguro? esta accion es irreversible"%> </td>
			</tr>
			<%end%>
		</table>
		<input type="submit" value="Eliminar todos">
	</form>
	</div>
</div>




<script>
<%if @exist%>
$('.menu').toggle("slide");
<%end%>
<% if (!params['date_to'].blank?) %>
$('.date_range').toggle("slide");
<%end%>
$(document).ready(function() {
    $('#showmenu').click(function() {
         $('.menu').toggle("slide");
    });
    $('#showdate').click(function() {
         $('.date_range').toggle("slide");
    });
});

</script>
