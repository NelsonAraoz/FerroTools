

<div class="row">
	<div class="col-lg-12">
	<h2 align="center" id="forms">Pedidos a enviar</h2>
		
	<%@locations.each do |location|%>
		<%if @orders.where(:location_id=>location.id).size>0%>
				
  		
		<div class="panel panel-primary">
  			<div class="panel-heading">
   				 <h3 class="panel-title"><a href="/locations/<%=location.id%>" data-no-turbolink = "true"><%=location.address.to_s+"# "+location.number.to_s%></a></h3>
  			</div>
  			<div class="panel-body">
  			  <table class="table table-striped table-bordered">
  			  	<tr>
  			  		<th>Producto</th>
					<th>Precio</th>
					<th>Marca</th>
					<th>Cantidad</th>

					<th>Fecha</th>
					<th></th>
  			  	</tr>
  			  	<%@orders.where(:location_id=>location.id).each do |order|%>
  			  		<tr>
  			  			<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center">
					
				
						<%=order.amount%>
				
					
				
					</td>
				<td><%=order.updated_at.to_date%></td>
				<td align="center"><%= link_to 'Cancelar', '/orders/uncheck_send/'+order.id.to_s, method: :post, data: { confirm: 'Desea eliminar este pedido?' }, :class => 'btn btn-mini btn-danger' %></td>
  			  		</tr>
  			  	<%end%>
  			  </table>
  			 
 		    </div>
		</div>
		
		<%end%>
	<%end%>
	</div>
</div>



