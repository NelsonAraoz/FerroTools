<div class="row">
	
	<div class="col-lg-12">
		<div class="page-header">
		<h2 align="center" id="forms">Mis pedidos</h2>
		</div>
		<form action="/orders/confirm_order" method="post">
		<table class="table table-striped table-bordered">
		<tr>	
			<th>Producto</th>
			<th>Precio</th>
			<th>Marca</th>
			<th>Cantidad</th>

			<th>Fecha</th>
			<th>Pedir</th>
			<th></th>
		</tr>
		<% @orders. each do |order| %>
			<tr>
				<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center"><a class="btn" data-toggle="modal" href="#myModal" OnClick="setUpdate(<%=order.id%>,<%=order.amount%>);">	<%=order.amount%></a>
					
				</td>
				<td><%=order.updated_at.to_date%></td>
				<td align="center">
	
					<input type="checkbox" name="pedir[]" value="<%=order.id%>"></td>
				<td align="center"><%= link_to 'Eliminar', order_path(order), method: :delete, data: { confirm: 'Desea eliminar este pedido?' }, :class => 'btn btn-mini btn-danger' %></td>
			</tr>
		<%end%>
		</table>
		<%=select_tag :location,options_from_collection_for_select(current_user.locations, "id", "address")%>
		<input type="submit" value="Pedir" class = "btn btn-primary">
		</form>
	</div>
</div>




<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Actualizar pedido</h4>
      </div>
      <div class="modal-body">
        
<form accept-charset="UTF-8" action="" class="edit_order" id="edit_order" method="post">
	<input type="text" value="" name="order[amount]" id="order_amount">
	<input type="submit" value="actualizar" class = "btn btn-primary">
</form>


      </div>
      </div>
  </div>
</div>


<script>
function setUpdate(id,value)
{
try{
	document.getElementById('edit_order').action="/orders/"+id;;
	}
	catch(err){alert(err.message);}

	amount=document.getElementById("order_amount");
	amount.value=value;
}
</script>
