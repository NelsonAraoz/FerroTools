<div class="row">
	
	<div class="col-lg-12">
		<div class="page-header">
		<h2 align="center" id="forms">Mis pedidos</h2>
		</div>
		<form action="/orders/confirm_order" method="post">
		<table class="table table-striped table-bordered">
		<tr>	
			<th>Producto</th>
			<th>Precio</th>
			<th>Marca</th>
			<th>Cantidad</th>

			<th>Fecha</th>
			<th>Pedir</th>
			<th></th>
		</tr>
		<% @orders. each do |order| %>
			<tr>
				<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center"><%=form_for order, :method=> :update do |f| %>
					<table class="table table-striped table-bordered">
						<tr>
						<td>
						<%=f.text_field :amount,:size=>5%>
					</td>
					<td>
						<input type="submit" value="actualizar" class = "btn btn-primary">
					</td> 
				</tr>
					</table>
					<%end%></td>
				<td><%=order.updated_at.to_date%></td>
				<td align="center"><input type="checkbox" name="pedir[]" value="<%=order.id%>"></td>
				<td align="center"><%= link_to 'Eliminar', order_path(order), method: :delete, data: { confirm: 'Desea eliminar este pedido?' }, :class => 'btn btn-mini btn-danger' %></td>
			</tr>
		<%end%>
		</table>
		<%=select_tag :location,options_from_collection_for_select(current_user.locations, "id", "address")%>
		<input type="submit" value="Pedir" class = "btn btn-primary">
		</form>
	</div>
</div>