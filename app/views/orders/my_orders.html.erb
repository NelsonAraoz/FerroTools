<div class="row">
	<div class="col-lg-4">
		<%=link_to "Volver atras",:back%><br>
		<%if(@pictures.size>0)%>
    		<% @pictures.each do |picture| %>

      <a href="<%=picture.picture.url%>" rel="group1" data-colorbox-static="true" class="cboxElement"><img src="<%=picture.picture.url%>"  heigth="100" width="100"/></a>
   			 <%end%>
			<%end%>
	</div>
	<div class="col-lg-4">
		<div class="page-header">
		<h2 align="center" id="forms"><%=@product.name%></h2>
		</div>
		<%= form_for @order do |t| %>
		<table class="table table-striped table-bordered">
			<tr>
				<td>Precio</td><td><%=@product.price%></td>
			</tr>
			<tr>
				<td>Marca</td><td><%=@product.brand%></td>
			</tr>
			<tr>
				<td>Cantidad</td><td><%=t.text_field :amount,:size=>"7" %>/<%=@product.stock%><%=t.hidden_field :product_id,:value=>@product.id %></td>
			</tr>
		</table>
		<input type="submit" align="center" value="Pedir">
		<%end%>
	</div>
</div>