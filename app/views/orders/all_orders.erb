

<div class="row">
	<div class="col-lg-12">
	
	<%@locations.each do |location|%>
		<%if @orders.where(:location_id=>location.id).size>0%>
				
  		
		<div class="panel panel-primary">
  			<div class="panel-heading">
   				 <h3 class="panel-title"><a href="/locations/<%=location.id%>" data-no-turbolink = "true"><%=location.address.to_s+"# "+location.number.to_s%></a></h3>
  			</div>
  			<div class="panel-body">
  				<form action="/orders/confirm_order_send" method="post">
  			  <table class="table table-striped table-bordered">
  			  	<tr>
  			  		<th>Producto</th>
					<th>Precio</th>
					<th>Marca</th>
					<th>Cantidad</th>

					<th>Fecha</th>
					<th></th>
  			  	</tr>
  			  	<%@orders.where(:location_id=>location.id).each do |order|%>
  			  		<tr>
  			  			<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center">
					
				
						<%=order.amount%>
				
					
				
					</td>
				<td><%=order.updated_at.to_date%></td>

				<td><input type="checkbox" name="llevar[]" value="<%=order.id%>"></td>
  			  		</tr>
  			  	<%end%>
  			  </table>
  			  <b>Fecha de entrega:</b><br>
  			   <input type="date" id="entrega" name="entrega" class='form-control input-append' data-format='dd/MM/yyyy' required=true :style="border-bottom-left-radius: 4px;  border-top-left-radius: 4px;"><br>
  			  <input type="submit" value="Entregar" class = "btn btn-primary">
  			</form>
 		    </div>
		</div>
		
		<%end%>
	<%end%>
	</div>
</div>