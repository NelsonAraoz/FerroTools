<div class="row">
<h1>Mis mensajeros</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre de usuario</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
    
      <th></th>

      <th></th>

      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messengers.each do |messenger| %>
      <tr>
        <td><%= messenger.email %></td>
        <td><%= messenger.name %></td>
        <td><%= messenger.lastname %></td>
        <td><%= messenger.phone%></td>
        
        <td>
          <%= link_to 'Editar', '/users/edit_messenger/'+messenger.id.to_s%>
        </td>
        <td>
          <%= link_to 'Pedidos', '/orders/messenger_orders/'+messenger.id.to_s%>
        </td>
        <td>

          <%= link_to 'Ubicacion', '/messenger_locations/show/'+messenger.id.to_s,'data-no-turbolink' => true%>
        </td>
            <td>

          <%= link_to 'Eliminar', user_path(messenger),
                    method: :delete, data: { confirm: 'Seguro?' }%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Nuevo mensajero', new_messenger_path %>
</div>