<h1 align="center">Cambiar password</h1>
<div class="row">
	<div class="col-lg-2"></div>
	<div class="col-lg-7">
<h4>Llene los campos:</h4><br>
<%= form_for @user, :url=>'/users/update_password', :method=>'post' do |f|%>
<b>Nuevo password:</b> <%=f.password_field :password,:class=>'form-control' %><br>
<b>Repita nuevo password:</b><%=f.password_field :password_confirmation,:class=>'form-control' %> <br>
<b>Password actual: </b><%=f.password_field :current_password,:class=>'form-control' %><br>
<input type="submit" value="Cambiar">
<%end%>
</div>
</div>