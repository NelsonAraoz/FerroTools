<h1>Mis clientes</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.lastname %></td>
        <td><%= user.phone %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Carrito', '/orders/user_orders/'+user.id.to_s %></td>
        <td><%= link_to 'Ubicaciones', '/locations/index/'+user.id.to_s %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>