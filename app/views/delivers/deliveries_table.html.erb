	<table border="1">
  			  	<tr>
  			  		<th>Producto</th>
					<th>Precio</th>
					<th>Marca</th>
					<th>Cantidad</th>
					<th>Fecha</th>
          <th>Enviar</th>
           
				  	</tr>
            
  			  	<%@orders.each do |order|%>
  			  		<tr >
  			  	  		<td align="center"><%=order.product.name%></td>
				          <td align="center"><%= order.product.price%></td>
				          <td align="center"><%=order.product.brand%></td>
				         <td align="center">
						      <%=order.amount%>
					       </td>
				        <td><%=order.updated_at.to_date%></td>
                <td><%=@shipping.packages.where(:order_id=>order.id).sum(:amount)%>/<%=order.amount%></td>
				
				  		</tr>
  			  	<%end%>
  			  </table>
          