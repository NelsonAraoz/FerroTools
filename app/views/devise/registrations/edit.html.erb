<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
<div class="col-lg-2">
 </div>
 
<div class="col-lg-7">
  <div><%= f.label :email, "Correo" %><br />
  <%= f.email_field :email, :autofocus => true,:class=>'form-control' %></div>
<div><%= f.label :name, "Nombre" %><br />
  <%= f.text_field :name, :autofocus => true,:class=>'form-control' %></div>
  <div><%= f.label :lastname, "Apellido" %><br />
  <%= f.text_field :lastname, :autofocus => true,:class=>'form-control' %></div>
  <div><%= f.label :phone, "Telefono" %><br />
  <%= f.text_field :phone, :autofocus => true,:class=>'form-control' %></div>
  <div><%= f.label :address, "Direccion" %><br />
  <%= f.text_field :address, :autofocus => true,:class=>'form-control' %></div>
<div><%= f.label :password %> <i>(Dejar en blanco si no desea cambiar)</i><br />
  <%= f.password_field :password, :autocomplete => "off",:class=>'form-control'  %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation,:class=>'form-control'  %></div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div><%= f.label :current_password %> <i>(necesitamos su password actual para confirmar cambios)</i><br />
  <%= f.password_field :current_password,:class=>'form-control'  %></div>

  <div><%= f.submit "Actualizar" %></div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>No esta conforme? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "Seguro?" }, :method => :delete %></p>

<%= link_to "Atras", :back %>
</SSdiv>






