
<div class="row">

	<div class="panel panel-primary">
		<div class="panel-heading">
		
			<h2 align="center" id="forms"><%=@product.name%></h2>
		
			
		</div>
		  <div class="panel-body">
	<div class="col-lg-5">
		<h2 align="center">Presione para ver imagen:</h2>
		<%if(@pictures.size>0)%>
    		<% @pictures.each do |picture| %>

      <a href="<%=picture.picture.url%>" rel="group1" data-colorbox-static="true" class="cboxElement"><img src="<%=picture.picture.url%>"  heigth="100" width="100"/></a>
   			 <%end%>
			<%end%>
	</div>
	<div class="col-lg-7">
		<% if current_user!=nil && current_user.rol=="regular" %>
			<h2 align="center">AÃ±adir al carrito</h2>
		<%end%>
		
		
		<table class="table table-striped table-bordered">
			<tr>
				<td>Precio</td>
				<%if current_user!=nil%>
				<td><%=@product.price%></td>
				<%else%>
				<td><b>Ingrese al sistema!</b></td>
				<%end%>
			</tr>
			<tr>
				<td>Marca</td><td><%=@product.brand%></td>
			</tr>
			<tr>
				<td>Stock</td><td><%=@product.stock%></td>

			</tr>
		</table>
		<div >
				<b>Comparte:</b><br>
		<%= social_share_button_tag("FerroTools", :rel => "twipsy") %>
		<%= like_button(582929041818077) %>
		</div>
		<% if current_user!=nil && current_user.rol=="admin" %>
		<br><br>
		<ul>
			<li> <a href="/orders/remove_kart/<%=@product.id%>"><button type="button" class="btn btn-default">Quitar de carritos</button></a> </li><br>
		<li><a href="/products/edit/<%=@product.id%>"><button type="button" class="btn btn-default">Editar producto</button></a></li>
<br>

                  <li><%= form_for @product, :html => {:method => 'delete'} do |t| %>
                    <input type="submit" value="Eliminar" class="btn btn-danger" onClick="return confirm('Atencion! se eliminaran todas las imagenes referentes a este producto, esta seguro?');">
                  <%end%></li>
              </ul>
                  <%elsif current_user!=nil && current_user.rol=="regular"%>
                 
                  <br>
                  		<%= form_for @order do |t| %>
                  		<div class="well">
                  			 <b>Tiempo de entrega: 2 dias laborales</b><br>
                  			<td>Cantidad&nbsp;</td><td><%=t.text_field :amount,:size=>"7" %> de <%=@product.stock%> disponibles.<%=t.hidden_field :product_id,:value=>@product.id %></td><br>
                  			<table align="center" style="background: orange">
                  			<td >
                  				&nbsp;ADD<br>
                  			<input type="image"  src="/assets/carrito.png" alt="Submit Form" height="35" width="35"/>
                  		</td>
                  	</table>
                  </div>
                  		<%end%>

                  
                  <%else%>
                  <div align="center"><b>Debe ingresar al sistema para realizar un pedido</b></div>
         		 <%end%>
	</div>

</div>

     
</div>

</div>

