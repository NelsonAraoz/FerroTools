
<div class="row">
	
	<div class="col-lg-12">
		<div class="page-header">
		<h2 align="center" id="forms">Eliminar items</h2>
		</div>
		<form action="/shippings/destroy/<%=@shipping.id%>" method="post">
		<table class="table table-striped table-bordered">
		<tr>	
			<th>Producto</th>
			<th>Precio</th>
			<th>Marca</th>
			<th>Cantidad</th>
			<th>Fecha de pedido</th>			
			<th></th>
		</tr>
		<% @orders. each do |order| %>
			<tr>
				<td align="center"><%=order.product.name%></td>
				<td align="center"><%= order.product.price%></td>
				<td align="center"><%=order.product.brand%></td>
				<td align="center">
						<%=order.amount%>
				</td>
				<td><%=order.updated_at.to_date%></td>
				
				<td align="center">
					<input type="checkbox" name="eliminar[]" value="<%=order.id%>">
				</td>
			</tr>
		<%end%>
		</table>
		<input type="submit" value="Eliminar">
		</form>
		
	</div>
</div>